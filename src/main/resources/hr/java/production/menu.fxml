<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.production.MenuController">

    <MenuBar prefHeight="28.0" prefWidth="600.0">
        <menus>
            <Menu mnemonicParsing="false" text="Home">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#showMainScreen" text="Main screen" />
            </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Item">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showItemsScreen" text="Search" />
               <MenuItem mnemonicParsing="false" onAction="#showAddNewItem" text="Add new Item" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Factory">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showFactoriesScreen" text="Search" />
               <MenuItem mnemonicParsing="false" onAction="#showAddNewFactoriesScreen" text="Add new Factory" />
                </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Store">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#showStoresScreen" text="Search" />
               <MenuItem mnemonicParsing="false" onAction="#showAddNewStoresScreen" text="Add new Store" />
                </items>
            </Menu>
         <Menu mnemonicParsing="false" text="Category">
            <items>
               <MenuItem mnemonicParsing="false" onAction="#showCategoriesScreen" text="Search" />
               <MenuItem mnemonicParsing="false" onAction="#showAddNewCategory" text="Add new Category" />
            </items>
         </Menu>
        </menus>
    </MenuBar>

</AnchorPane>
